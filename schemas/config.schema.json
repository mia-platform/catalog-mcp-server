{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration",
  "description": "The service configuration.",
  "type": "object",
  "properties": {
    "catalogEngineUrl": {
      "description": "The URL of the catalog-engine.",
      "type": "string"
    },
    "server": {
      "description": "The configuration for the server.",
      "allOf": [
        {
          "$ref": "#/definitions/ServerSettings"
        }
      ]
    }
  },
  "required": [
    "catalogEngineUrl"
  ],
  "definitions": {
    "ServerSettings": {
      "type": "object",
      "properties": {
        "apiPrefix": {
          "description": "Server REST API prefix",
          "type": "string",
          "default": "/",
          "pattern": "^/(?:[a-zA-Z0-9._~-]+(?:/[a-zA-Z0-9._~-]+)*)?$"
        },
        "ip": {
          "description": "Server bind IP",
          "type": "string",
          "format": "ipv4",
          "default": "0.0.0.0"
        },
        "port": {
          "description": "Server port",
          "type": "integer",
          "format": "uint16",
          "default": 3000,
          "maximum": 65535,
          "minimum": 0
        }
      }
    }
  }
}